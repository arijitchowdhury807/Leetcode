class Solution {
    public int numSubseq(int[] nums, int target) {

        Arrays.sort(nums);
         int left = 0;
         int right = nums.length-1;
         int sum = 0;
         int mod = 1_000_000_007;
        int n = nums.length;

        // Precompute powers of 2
        int[] pow = new int[n];
        pow[0] = 1;
        for (int i = 1; i < n; i++) {
            pow[i] = (pow[i - 1] * 2) % mod;
        }
         while(left <= right){
            if(nums[left]+nums[right] <= target){
                 sum= (sum + pow[right - left]) % mod;
                left++;
                
            }else{
                right--;
                
            }
         }
         return sum;
        
    }
}
